{% comment %}
  Modern Languages Button Style
{% endcomment %}

<div class="language-pills">

  {% for entry in entries %}

    {% capture lang_name %}
      {% if entry.name %}{{ entry.name }}{% elsif entry.language %}{{ entry.language }}{% endif %}
    {% endcapture %}

    {% capture fluency %}
      {% if entry.summary %}{{ entry.summary }}{% elsif entry.fluency %}{{ entry.fluency }}{% endif %}
    {% endcapture %}

    <span class="language-pill">

      {% if entry.icon %}
        <i class="{{ entry.icon }} lang-icon"></i>
      {% endif %}

      <span class="lang-text">{{ lang_name }}</span>

      {% if fluency != '' %}
        <span class="lang-level">{{ fluency }}</span>
      {% endif %}

    </span>

  {% endfor %}

</div>
