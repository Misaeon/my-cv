{% comment %}
  Modern Languages renderer
  Supports:
  - RenderCV: name + summary
  - JSONResume: language + fluency
{% endcomment %}

<ul class="card-text font-weight-light list-group list-group-flush language-list">
  {% for entry in entries %}
    {% capture lang_name %}
      {% if entry.name %}{{ entry.name }}{% elsif entry.language %}{{ entry.language }}{% endif %}
    {% endcapture %}
    {% capture fluency %}
      {% if entry.summary %}{{ entry.summary }}{% elsif entry.fluency %}{{ entry.fluency }}{% endif %}
    {% endcapture %}

    <li class="list-group-item language-row">

      <div class="language-left">
        {% if entry.icon %}
          <i class="{{ entry.icon }} language-icon"></i>
        {% endif %}
        <span class="language-name">{{ lang_name }}</span>
      </div>

      {% if fluency != '' %}
        <span class="language-level">{{ fluency }}</span>
      {% endif %}

    </li>
  {% endfor %}
</ul>
